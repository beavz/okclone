<% var essays = OKC.formatting_data.get("current_essays") %>
<% var details = OKC.formatting_data.get("details") %>

<section id="essays">
  <% _.each(essays, function (essay) { %>
    <h3><%= essay.text %></h3>

    <% if (editing[essay.key]) { %>
      <form data-id="<%= essay.key %>">
        <textarea name="user[<%= essay.key %>]">
          <%= user.escape(essay.key) %>
        </textarea>
        <input type="submit" value="SAVE">
      </form>

    <% } else { %>
      <p><%= user.escape(essay.key) %></p>
      <button class="edit" data-id="<%= essay.key %>">EDIT</button>

    <% } %>
  <% }) %>
</section>


<section id="details">
  <form data-id="details">
    <table>
      <% _.each(details, function (detail) { %>
        <tr class="<%= detail.type %>">
          <td><%= detail.label %></td>

          <td>
            <% if (detail.type === "dropdown") { %>
              <% if (editing["details"]) { %>
                <select name="user[<%= detail.key %>]">
                  <% _.each(_.keys(detail.options), function (key) { %>
                    <%= user.get(detail.key) === key%>
                    <option
                      value="<%= key %>"
                      <% if (user.get(detail.key) === key) { %>
                        <%= ' selected="true"'  %>
                      <% } %>
                      >
                      <%= detail.options[key] %>
                    </option>
                  <% }) %>
                </select>
              <% } else { %>
                <%= detail.options[user.get(detail.key)] %>
              <% } %>

            <% } else if (detail.type === "height") { %>
              <% if (editing["details"]) { %>
                <input
                  type="text"
                  name="user[height]"
                  value="<%= user.escape("height") %>">
              <% } else { %>
                <%= user.escape("height") || "--"  %>
              <% } %>


            <% } else if (detail.type === "age_range") { %>
              <% if (editing["details"]) { %>
                <input
                  type="text"
                  name="user[min_age]"
                  value="<%= user.escape("min_age") %>">
                  -
                <input
                  type="text"
                  name="user[max_age]"
                  value="<%= user.escape("max_age") %>">
              <% } else { %>
                <% if (user.get("min_age") && user.get("max_age")) { %>
                  <%= user.get("min_age") + " - " + user.get("max_age") %>
                <% } else { %>
                  --
                <% } %>
              <% } %>

            <% } else if (detail.type === "radio") { %>
              <% _.each(_.keys(detail.options), function (key) { %>
                <% if (editing["details"]) { %>
                  <input type="hidden"
                    name="user[<%= key %>]"
                    value="false" >
                  <input
                    type="checkbox"
                    name="user[<%= key %>]"
                    value="true"
                    <% if (user.get(key)) { %>
                      <%= ' checked="true"'  %>
                    <% } %> >
                  <label><%= detail.options[key] %></label>
                  <br>
                <% } else { %>
                  <% if (user.get(key)) { %>
                    <%= detail.options[key] %><br>
                  <% } %>
                <% } %>
              <% }) %>

            <% } %>
          </td>
        </tr>
      <% }) %>
    </table>
    <% if (editing.details) { %>
      <input type="submit" value="SAVE">
    <% } else { %>
      <button class="edit" data-id="details">EDIT</button>
    <% } %>
  </form>
</section>

