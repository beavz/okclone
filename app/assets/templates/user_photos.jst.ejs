<section id="photos">

    <% _.each(user.albums().models, function (album) { %>
      <h3><%= album.escape("name") %></h3>
      <hr>
      <ul class="album-photos" data-id="<%= album.id %>">
        <% _.each(album.pictures().models, function (picture) { %>
          <li>
            <img src="<%= picture.escape("small_img") %>">
          </li>
        <% }) %>
      </ul>
    <% }) %>

</section>

<div id="modal" class="modal">

  <article class="modal-content">
    <span class="modal-close hide-modal">&times;</span>
    <ul class="pictures"></ul>
  </article>

  <div class="modal-screen hide-modal"></div>

</div>

<script>

  window.showModal = function(){
    $("#modal").addClass("is-active");
  };

  window.hideModal = function(){
    $("#modal").removeClass("is-active");
  }

  $("body").on("click", ".hide-modal", window.hideModal);
  $("body").on("click", "li", window.showModal);

</script>

<style>

  .modal {
    display: none;
  }

  .modal.is-active {
    display: block;
  }

  .modal-content {
    position: absolute;
    z-index: 1000;
    background: #fff;
    top: 50px;

    width: 700px;
    min-height: 300px;
    padding: 50px;

    margin: auto;

  }

  .modal-screen {
    position: fixed;
    top: 0;
    left: 0;

    background: #222;
    opacity: .7;
    width: 100%;
    height: 100%;
    z-index: 999;
  }

  .modal-close {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 30px;
    font-weight: bold;
    color: #999;
    cursor: pointer;
  }

  .modal-close:hover {
    color: #333;
  }
</style>
