              <% User.offsprings.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Pets</td>
          <td>
            <select name="user[pets]">
              <% User.pets.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Looking for:</td>
          <td></td>
        </tr>
        <tr>
          <td>Age</td>
          <td><input type="text" value="<%= @user.min_age %>" name="user[min_age]">
            -
            <input type="text" value="<%= @user.max_age %>" name="user[max_age]">
          </td>
        </tr>
        <tr>
          <td>Status</td>
          <td>
            <select name="user[looking_for_status]">
              <% User.looking_for_statuses.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Gender</td>
          <td>placeholder</td>
        </tr>
        <tr>
          <td>Interaction</td>
          <td>placeholder</td>
        </tr>
      </table>
      <input type="submit" value="SAVE CHANGES">
      </form>
    </section>
  </section>

  <section id="photos">
  </section>

  <section id="questions">
    <% @user.responses.each do |response| %>
      <%= render "edit_response", response: response %>
    <% end %>
  </section>
</content>




