<header>
  <img src="http://cityyearnh.files.wordpress.com/2011/02/boat.jpg" id="profile-pic">
  <h3 id="basic-info"><%= basic_info(@user) %><h3>
</header>
<content>
  <nav id="tabs">
    <a href="">INFO</a>
    <a href="">PHOTOS</a>
    <a href="">QUESTIONS</a>
  </nav>

  <section id="info">
    <section id="essays">
      <form action="<%= user_url(@user) %>" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <%= auth_token %>
        <%= essays(@user, true) %>
        <input type="submit" value="SAVE CHANGES">
      </form>
    </section>

    <section id="details">
      <form action="<%= user_url(@user) %>" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <%= auth_token %>
      <table>
        <tr>
          <td>Gender</td>
          <td>
            <select name="user[gender]">
              <% User.genders.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Orientation</td>
          <td>
            <select name="user[orientation]">
              <% User.orientations.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Ethnicity</td>
          <td>
            <select name="user[ethnicity]">
              <% User.ethnicities.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Height</td>
          <td><input type="text" value="<%= @user.height %>" name="user[height]"></td>
        </tr>
        <tr>
          <td>Body type</td>
          <td>
            <select name="user[body_type]">
              <% User.body_types.each do |key, value| %>
