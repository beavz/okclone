                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Sign</td>
          <td>
            <select name="user[sign]">
              <% User.signs.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Education</td>
          <td>
            <select name="user[education]">
              <% User.educations.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Job</td>
          <td>
            <select name="user[job]">
              <% User.jobs.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
