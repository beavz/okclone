            <select name="user[income]">
              <% User.incomes.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Relationship status</td>
          <td>
            <select name="user[relationship_status]">
              <% User.relationship_statuses.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Relationship type</td>
          <td>
            <select name="user[relationship_type]">
              <% User.relationship_types.each do |key, value| %>
                <option value="<%= key %>" selected><%= key %></option>
              <% end %>
