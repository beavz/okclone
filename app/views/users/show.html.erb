<style>
  #tabs {
    background: transparent;
  }

  #info, #questions {
    border: 1px solid lightgray;
    padding: 20px;
    margin: 20px 0px;
  }
  #essays {
    margin-bottom: 10px;
    border-bottom: 1px solid lightgray;
    padding-bottom: 10px;
  }
