<article>
  <form action="<%= response_url(response) %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <%= auth_token %>

    <h5><%= response.question.text %></h5>

      <% response.question.answers.each do |answer| %>
        <label><%= answer.text %>
          <input
            type="radio"
            name="response[answer_id]"
            value="<%= answer.id %>"
            <%= answer.id == response.answer_id ? "checked" : "" %> >
        </label>
        <br>
      <% end %>
      <label> explain:
        <textarea name="response[explanation]">
           <%= response.explanation  %>
        </textarea>
      </label>

    <input type="submit" value="SAVE CHANGES">
  </form>
</article>






